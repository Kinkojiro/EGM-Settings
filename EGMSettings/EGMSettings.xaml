<global:NotifyPropertyChangedWindowBase
    xmlns:global="clr-namespace:EGMSettings" x:Class="EGMSettings.SettingsPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EGMSettings"
        mc:Ignorable="d"
        Loaded="EGMSettings_Loaded"
        Closing="EGMSettings_Closing"
        Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="{Binding header_TITLE, RelativeSource={RelativeSource Self}}"
        Icon="egm.ico">
    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="Label" TargetType="TextBlock">
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="True">
                        <Setter Property="Foreground" Value="Black"/>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Foreground" Value="LightSlateGray"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="Choice" TargetType="ComboBox">
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="True">
                        <Setter Property="Foreground" Value="Black"/>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Foreground" Value="LightSlateGray"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveCommand}"/>
        <KeyBinding Key="L" Modifiers="Control" Command="{Binding LoadCommand}"/>
        <KeyBinding Key="D" Modifiers="Control" Command="{Binding ShowDiagnosticsCommand}"/>
        <KeyBinding Key="A" Modifiers="Control" Command="{Binding AutoTOCCommand}"/>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SwitchGameCommand}"/>
    </Window.InputBindings>
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Bottom" Height="40">
            <TextBlock x:Name="status_TxtBx" Text="{Binding StatusText}" Foreground="SlateGray" VerticalAlignment="Center" HorizontalAlignment="Left" DockPanel.Dock="Left" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  Name="Buttons" >
                <DockPanel LastChildFill="True">
                </DockPanel>
                <Button x:Name="Back_btn" Content="Back" Padding="3" Margin="5" Width="50" HorizontalAlignment="Right" ToolTip="View previous panel." Command="{Binding BackCommand}"/>
                <Button x:Name="Next_btn" Content="Next" Padding="3" Margin="5" Width="50" HorizontalAlignment="Right" ToolTip="View next panel." Command="{Binding NextCommand}"/>
                <Button x:Name="Finish_btn" Content="Finish" Padding="3" Margin="5" Width="50" HorizontalAlignment="Right" ToolTip="Close and save settings" Command="{Binding FinishCommand}"/>
            </StackPanel>
        </Grid>
        <TabControl Name="TabCtrl" SelectedIndex="{Binding currentView}">
            <TabItem Header="Welcome" TabIndex="0">
                <StackPanel  Background="Black">
                    <Image Name="LogoImg" Source="EGM_Logo_v3.png" />
                    <TextBlock Text="{x:Static local:SettingsPanel.welcome_TITLE}" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" Foreground="AntiqueWhite"/>
                    <TextBlock FontSize="12"  HorizontalAlignment="Stretch" TextAlignment="Justify" Margin="5" TextWrapping="Wrap" Foreground="NavajoWhite">
                        <Run Text="{x:Static local:SettingsPanel.welcome_TXT}"/>
                    </TextBlock>
                </StackPanel>
            </TabItem>
            <!-- Mod Settings -->
            <TabItem Name="tab_mod" Header="Mod Settings" TabIndex="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="0" Margin="3" Grid.Row="0">
                        <TextBlock Text="War Asset Systems (Set before starting Playthrough)" FontWeight="Black" MouseEnter="Normandy_MouseOver" Tag="0"/>
                        <Grid DockPanel.Dock="Top" Margin="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Name="modBeta_lbl" Text="Difficulty (Beta only): " VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" MouseEnter="Mod_MouseOver" Tag="ModBeta" Style="{StaticResource Label}"/>
                            <ComboBox Name="modBeta_cbx" ItemsSource="{Binding ModWARBeta_cln}" SelectedIndex="{Binding ModWARBeta_choice}"  Grid.Column="1" Grid.Row="0" Margin="3" MouseEnter="Mod_MouseOver" Tag="ModBeta" Style="{StaticResource Choice}" ToolTip="Difficulty (Target with ME2 playthrough / Target with ME3 Only)"/>
                            <TextBlock Name="modQP_lbl" Text="Quick Play Mode: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" MouseEnter="Mod_MouseOver" Tag="ModQP" Style="{StaticResource Label}"/>
                            <ComboBox Name="modQP_cbx" ItemsSource="{Binding ModQP_cln}" SelectedIndex="{Binding ModQP_choice}"  Grid.Column="1" Grid.Row="1" Margin="3" MouseEnter="Mod_MouseOver" Tag="ModQP" Style="{StaticResource Choice}"/>
                        </Grid>
                        <TextBlock Text="Mod Content" FontWeight="Black" MouseEnter="Normandy_MouseOver" Tag="0"/>
                        <StackPanel Grid.Column="0" Margin="3">
                            <Grid DockPanel.Dock="Top" Margin="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Name="modAssgn_lbl" Text="EGM Assignments: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" MouseEnter="Mod_MouseOver" Tag="ModAss" Style="{StaticResource Label}"/>
                                <ComboBox Name="modAssgn_cbx" ItemsSource="{Binding ModAssign_cln}" SelectedIndex="{Binding ModAssign_choice}"  Grid.Column="1" Grid.Row="0" Margin="3" MouseEnter="Mod_MouseOver" Tag="ModAss" Style="{StaticResource Choice}"/>
                                <TextBlock Name="modEggs_lbl" Text="EGM Easter Eggs: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="3" MouseEnter="Mod_MouseOver" Tag="ModEggs" Style="{StaticResource Label}"/>
                                <ComboBox Name="modEggs_cbx" ItemsSource="{Binding ModEggs_cln}" SelectedIndex="{Binding ModEggs_choice}"  Grid.Column="1" Grid.Row="3" Margin="3" MouseEnter="Mod_MouseOver" Tag="ModEggs" Style="{StaticResource Choice}"/>
                            </Grid>
                        </StackPanel>
                        <TextBlock Text="Compatibility" FontWeight="Black" MouseEnter="Normandy_MouseOver" Tag="0"/>
                        <StackPanel Grid.Column="0" Margin="3">
                            <Grid DockPanel.Dock="Top" Margin="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Name="modALOT_lbl" Text="Memory Management: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" MouseEnter="Mod_MouseOver" Tag="ModALOT" Style="{StaticResource Label}"/>
                                <ComboBox Name="modALOT_cbx" ItemsSource="{Binding ModALOT_cln}" SelectedIndex="{Binding ModALOT_choice}"  Grid.Column="1" Grid.Row="1" Margin="3" MouseEnter="Mod_MouseOver" Tag="ModALOT" Style="{StaticResource Choice}"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                    <Border  BorderThickness="3" BorderBrush="AliceBlue" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
                        <StackPanel>
                            <TextBlock x:Name="mod_help_title" Text="{x:Static local:SettingsPanel.Mod_Help_TITLE}" FontSize="12" FontWeight="DemiBold" TextWrapping="Wrap" TextAlignment="Left" Margin="2" Padding="3"/>
                            <TextBlock x:Name="mod_help_text" Text="{x:Static local:SettingsPanel.Mod_Help_TXT}" FontSize="12" TextWrapping="Wrap" TextAlignment="Justify" Margin="2" Padding="3"/>
                        </StackPanel>
                    </Border>
                    <DockPanel Grid.Column="0" Grid.Row="1" Margin="3" >
                        <TextBlock ></TextBlock>
                        <Separator DockPanel.Dock="Top"/>
                        <Button DockPanel.Dock="Bottom" Name="btn_reset" Content="Reset All Settings to Default" Padding="5" Command="{Binding ResetDefaultCommand}" MouseEnter="Mod_MouseOver" Tag="ModReset"/>
                    </DockPanel>
                </Grid>
            </TabItem>
            <!-- Normandy -->
            <TabItem Name="tab_Normandy" Header="Normandy" TabIndex="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="3">
                        <TextBlock Text="Gameplay" FontWeight="Black" MouseEnter="Normandy_MouseOver" Tag="0"/>
                        <Grid DockPanel.Dock="Top" Margin="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Name="norSec_lbl" Text="Security Scanner: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" MouseEnter="Normandy_MouseOver" Tag="NorScan" Style="{StaticResource Label}"/>
                            <ComboBox Name="norSec_cb" ItemsSource="{Binding NorScanner_cln}" SelectedIndex="{Binding NorScanner_choice}"  Grid.Column="1" Grid.Row="0" Margin="3" MouseEnter="Normandy_MouseOver" Tag="NorScan" Style="{StaticResource Choice}"/>
                            <TextBlock Name="norDock_lbl" Text="Citadel Docking: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" MouseEnter="Normandy_MouseOver" Tag="NorDock" Style="{StaticResource Label}"/>
                            <ComboBox Name="norDock_cb" ItemsSource="{Binding NorDocking_cln}" SelectedIndex="{Binding NorDocking_choice}"  Grid.Column="1" Grid.Row="1" Margin="3" MouseEnter="Normandy_MouseOver" Tag="NorDock" Style="{StaticResource Choice}"/>
                            <TextBlock Name="norArm_lbl" Text="Mission Launch: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" MouseEnter="Normandy_MouseOver" Tag="NorArm" Style="{StaticResource Label}"/>
                            <ComboBox Name="norArm_cb" ItemsSource="{Binding NorArm_cln}" SelectedIndex="{Binding NorArm_choice}"  Grid.Column="1" Grid.Row="2" Margin="3" MouseEnter="Normandy_MouseOver" Tag="NorArm" Style="{StaticResource Choice}"/>
                        </Grid>
                        <TextBlock Text="Ship Music" FontWeight="Black" MouseEnter="Normandy_MouseOver" Tag="0"/>
                        <StackPanel Grid.Column="0" Margin="3">
                            <Grid DockPanel.Dock="Top" Margin="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Name="norRadio_lbl" Text="On-board Stereo: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" MouseEnter="Normandy_MouseOver" Tag="NorRadio" Style="{StaticResource Label}"/>
                                <ComboBox Name="norRadio_cb" ItemsSource="{Binding NorRadio_cln}" SelectedIndex="{Binding NorRadio_choice}"  Grid.Column="1" Grid.Row="0" Margin="3" MouseEnter="Normandy_MouseOver" Tag="NorRadio" Style="{StaticResource Choice}"/>
                                <TextBlock Name="norLIMus_lbl" Text="Cabin Invite Music: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" MouseEnter="Normandy_MouseOver" Tag="NorCabMus" Style="{StaticResource Label}"/>
                                <ComboBox Name="norLIMus_cb" ItemsSource="{Binding NorCabinMus_cln}" SelectedIndex="{Binding NorCabinMus_choice}"  Grid.Column="1" Grid.Row="1" Margin="3" MouseEnter="Normandy_MouseOver" Tag="NorCabMus" Style="{StaticResource Choice}"/>
                            </Grid>
                        </StackPanel>
                        <TextBlock Text="Galaxy Map" FontWeight="Black" MouseEnter="Normandy_MouseOver" Tag="0"/>
                        <StackPanel Grid.Column="0" Margin="3">
                            <Grid DockPanel.Dock="Top" Margin="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Name="norRelay_lbl" Text="Relay Video: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" MouseEnter="Normandy_MouseOver" Tag="NorRelay" Style="{StaticResource Label}"/>
                                <ComboBox Name="norRelay_cb" ItemsSource="{Binding NorRelay_cln}" SelectedIndex="{Binding NorRelay_choice}"  Grid.Column="1" Grid.Row="0" Margin="3" MouseEnter="Normandy_MouseOver" Tag="NorRelay" Style="{StaticResource Choice}"/>
                                <TextBlock Name="gmReapers_lbl" Text="Map Reapers: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" MouseEnter="Normandy_MouseOver" Tag="GMReapers" Style="{StaticResource Label}"/>
                                <ComboBox Name="gmReapers_cb" ItemsSource="{Binding GMReapers_cln}" SelectedIndex="{Binding GMReapers_choice}"  Grid.Column="2" Grid.Row="1" Margin="3" MouseEnter="Normandy_MouseOver" Tag="GMReapers" Style="{StaticResource Choice}"/>
                                <TextBlock Name="gmIcons_lbl" Text="Fleet Icons: " VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" MouseEnter="Normandy_MouseOver" Tag="GMIcons" Style="{StaticResource Label}"/>
                                <ComboBox Name="gmIcons_cb" ItemsSource="{Binding GMIcons_cln}" SelectedIndex="{Binding GMIcons_choice}"  Grid.Column="1" Grid.Row="2" Margin="3" MouseEnter="Normandy_MouseOver" Tag="GMIcons" Style="{StaticResource Choice}"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                    <Border  BorderThickness="3" BorderBrush="AliceBlue" Grid.Column="1" Grid.Row="0">
                        <StackPanel>
                            <TextBlock x:Name="nor_help_title" FontSize="12" FontWeight="DemiBold" TextWrapping="Wrap" TextAlignment="Left" Margin="2" Padding="3"/>
                            <TextBlock x:Name="nor_help_text" FontSize="12" TextWrapping="Wrap" TextAlignment="Justify" Margin="2" Padding="3"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <!-- Missions -->
            <TabItem Name="tab_missions" Header="Mission Timings" TabIndex="3">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <TextBlock Text="DLCs" FontWeight="Black" MouseEnter="Missions_MouseOver" Tag="0"/>
                        <Grid Margin="5, 1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Name="fromAshes_lbl" Text="From Ashes DLC (Javik) " VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" MouseEnter="Missions_MouseOver" Tag="HEN_PR" Style="{StaticResource Label}"/>
                            <ComboBox Name="fromAshes_cb" ItemsSource="{Binding Path=FromAshesDLC_cln}" SelectedIndex="{Binding FromAshesDLC_choice}"  Grid.Column="1" Grid.Row="0" Margin="3" MouseEnter="Missions_MouseOver" Tag="HEN_PR" Style="{StaticResource Choice}"/>
                            <TextBlock Name="leviathan_lbl" Text="Leviathan DLC  " VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" MouseEnter="Missions_MouseOver" Tag="EXP001" Style="{StaticResource Label}"/>
                            <ComboBox Name="leviathan_cb" ItemsSource="{Binding LeviathanDLC_cln}"  SelectedIndex="{Binding LeviathanDLC_choice}" Grid.Column="1" Grid.Row="1" Margin="3" MouseEnter="Missions_MouseOver" Tag="EXP001" Style="{StaticResource Choice}"/>
                            <TextBlock Name="omega_lbl" Text="Omega DLC (meet Aria first)" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" MouseEnter="Missions_MouseOver" Tag="EXP002" Style="{StaticResource Label}"/>
                            <ComboBox Name="omega_cb" ItemsSource="{Binding OmegaDLC_cln}" SelectedIndex="{Binding OmegaDLC_choice}"  Grid.Column="1" Grid.Row="2" Margin="3" MouseEnter="Missions_MouseOver" Tag="EXP002" Style="{StaticResource Choice}"/>
                            <TextBlock Name="citadel_lbl" Text="Citadel DLC  " VerticalAlignment="Center" Grid.Column="0" Grid.Row="3" MouseEnter="Missions_MouseOver" Tag="EXP003" Style="{StaticResource Label}"/>
                            <ComboBox Name="citadel_cb" ItemsSource="{Binding CitadelDLC_cln}" SelectedIndex="{Binding CitadelDLC_choice}"  Grid.Column="1" Grid.Row="3" Margin="3" MouseEnter="Missions_MouseOver" Tag="EXP003" Style="{StaticResource Choice}"/>
                        </Grid>
                        <TextBlock Text="Major Missions" FontWeight="Black" MouseEnter="Missions_MouseOver" Tag="0"/>
                        <Grid Margin="5, 1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Name="priorTuchanka_lbl" Text="Priority: Tuchanka" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" MouseEnter="Missions_MouseOver" Tag="PRTUCHANKA" Style="{StaticResource Label}"/>
                            <ComboBox Name="priorTuchanka_cb" ItemsSource="{Binding PrtyTuchanka_cln}" SelectedIndex="{Binding PrtyTuchanka_choice}"  Grid.Column="1" Grid.Row="0" Margin="3" MouseEnter="Missions_MouseOver" Tag="PRTUCHANKA" Style="{StaticResource Choice}"/>
                            <TextBlock Name="priorPerseus_lbl" Text="Priority: Perseus Veil" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" MouseEnter="Missions_MouseOver" Tag="PRPV" Style="{StaticResource Label}"/>
                            <ComboBox Name="priorPerseus_cb" ItemsSource="{Binding PrtyPerseus_cln}" SelectedIndex="{Binding PrtyPerseus_choice}"  Grid.Column="1" Grid.Row="1" Margin="3" MouseEnter="Missions_MouseOver" Tag="PRPV" Style="{StaticResource Choice}"/>
                            <TextBlock Name="priorCit3_lbl" Text="Priority: Citadel III (Thessia)" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" MouseEnter="Missions_MouseOver" Tag="PRC3" Style="{StaticResource Label}"/>
                            <ComboBox Name="priorCit3_cb" ItemsSource="{Binding PrtyThessia_cln}" SelectedIndex="{Binding PrtyThessia_choice}"  Grid.Column="1" Grid.Row="2" Margin="3" MouseEnter="Missions_MouseOver" Tag="PRC3" Style="{StaticResource Choice}"/>
                        </Grid>
                    </StackPanel>
                    <Border  BorderThickness="3" BorderBrush="AliceBlue" Grid.Column="1" Grid.Row="0">
                        <StackPanel>
                            <TextBlock x:Name="missions_help_title" Text="{x:Static local:SettingsPanel.Mission_TITLE}" FontSize="12" FontWeight="DemiBold" TextWrapping="Wrap" TextAlignment="Left" Margin="2" Padding="3"/>
                            <TextBlock x:Name="missions_help_text" Text="{x:Static local:SettingsPanel.Mission_TXT}" FontSize="12" TextWrapping="Wrap" TextAlignment="Justify" Margin="2" Padding="3"/>
                        </StackPanel>
                    </Border>
                    <StackPanel Grid.Row="1" Grid.Column="0">
                        <TextBlock Text="N7 Missions" FontWeight="Black" MouseEnter="Missions_MouseOver" Tag="0"/>
                        <Grid Margin="5, 1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Name="n7lab_lbl" Text="N7: Cerberus Lab" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" MouseEnter="Missions_MouseOver" Tag="N7LAB" Style="{StaticResource Label}"/>
                            <ComboBox Name="n7lab_cb" ItemsSource="{Binding N7Lab_cln}" SelectedIndex="{Binding N7Lab_choice}"  Grid.Column="1" Grid.Row="0" Margin="3" MouseEnter="Missions_MouseOver" Tag="N7LAB" Style="{StaticResource Choice}"/>
                            <TextBlock Name="n7benning_lbl" Text="N7: Cerberus Abductions" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" MouseEnter="Missions_MouseOver" Tag="N7BEN" Style="{StaticResource Label}"/>
                            <ComboBox Name="n7benning_cb" ItemsSource="{Binding N7benning_cln}" SelectedIndex="{Binding N7benning_choice}"  Grid.Column="1" Grid.Row="1" Margin="3" MouseEnter="Missions_MouseOver" Tag="N7BEN" Style="{StaticResource Choice}"/>
                            <TextBlock Name="n7tuchanka_lbl" Text="N7: Cerberus Attack" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" MouseEnter="Missions_MouseOver" Tag="N7ATK" Style="{StaticResource Label}"/>
                            <ComboBox Name="n7tuchanka_cb" ItemsSource="{Binding N7tuchanka_cln}" SelectedIndex="{Binding N7tuchanka_choice}"  Grid.Column="1" Grid.Row="2" Margin="3" MouseEnter="Missions_MouseOver" Tag="N7ATK" Style="{StaticResource Choice}"/>
                        </Grid>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <TextBlock Text=" " FontWeight="Black" MouseEnter="Missions_MouseOver" Tag="0"/>
                        <Grid Margin="5, 1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Name="n7ontarom_lbl" Text="N7: Communication Hub" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" MouseEnter="Missions_MouseOver" Tag="N7ONT" Style="{StaticResource Label}"/>
                            <ComboBox Name="n7ontarom_cb" ItemsSource="{Binding N7ontarom_cln}" SelectedIndex="{Binding N7ontarom_choice}"  Grid.Column="1" Grid.Row="0" Margin="3" MouseEnter="Missions_MouseOver" Tag="N7ONT" Style="{StaticResource Choice}"/>
                            <TextBlock Name="n7noveria_lbl" Text="N7: Cerberus Fighter Base" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" MouseEnter="Missions_MouseOver" Tag="N7NOV" Style="{StaticResource Label}"/>
                            <ComboBox Name="n7noveria_cb" ItemsSource="{Binding N7noveria_cln}" SelectedIndex="{Binding N7noveria_choice}"  Grid.Column="1" Grid.Row="1" Margin="3" MouseEnter="Missions_MouseOver" Tag="N7NOV" Style="{StaticResource Choice}"/>
                            <TextBlock Name="n7kypladon_lbl" Text="N7: Fuel Reactors" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" MouseEnter="Missions_MouseOver" Tag="N7CYO" Style="{StaticResource Label}"/>
                            <ComboBox Name="n7kypladon_cb" ItemsSource="{Binding N7kypladon_cln}" SelectedIndex="{Binding N7kypladon_choice}"  Grid.Column="1" Grid.Row="2" Margin="3" MouseEnter="Missions_MouseOver" Tag="N7CYO" Style="{StaticResource Choice}"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
            <!-- Squad -->
            <TabItem Name="tab_squad" Header="Extra Squadmates" TabIndex="4">
                <DockPanel LastChildFill="True">
                    <Border BorderBrush="AliceBlue" BorderThickness="3" DockPanel.Dock="Bottom" Padding="3" >
                        <Grid Margin="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <DockPanel LastChildFill="True" Grid.Column="0" MouseEnter="Squad_MouseOver" MouseLeave="Squad_MouseLeft">
                                <TextBlock Name="SqdChoice_lbl" Text="Bonus Squadmates" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Black" Grid.Column="2" Grid.Row="0" DockPanel.Dock="Top" Style="{StaticResource Label}"/>
                                <ComboBox Name="SqdChoice_cb" ItemsSource="{Binding Squad_cln}"  SelectedIndex="{Binding Squad_choice}" Grid.Column="3" Grid.Row="0" Margin="3" DockPanel.Dock="Top" Style="{StaticResource Choice}"/>
                                <TextBlock DockPanel.Dock="Bottom"/>
                            </DockPanel>
                            <StackPanel Name="BonusSquad_txt" Grid.Column="1" Margin="3" Visibility="Visible">
                                <TextBlock Text="IMPORTANT NOTES:" FontWeight="Medium"/>
                                <TextBlock Text="Shepard can choose from extra squadmates if they desire. Up to two extra squadmates can picked to be on standby to join Shepard on a mission. To tell a bonus squadmate that they maybe required and add them to the roster, go to the Crew roster and select 'Additional Squadmates'." TextWrapping="Wrap" Margin="3"/>
                                <TextBlock Text=" " TextWrapping="Wrap"/>
                                <TextBlock Text="{x:Static local:SettingsPanel.Squad_Notes}" TextWrapping="Wrap" Padding="5"/>
                            </StackPanel>
                            <StackPanel Name="storyMode_txt" Grid.Column="1" Margin="3" Visibility="Collapsed">
                                <TextBlock Text="STORY MODE:" FontWeight="Medium" />
